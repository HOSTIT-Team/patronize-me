<%= current_user.email %>

<div class="container">
  <div class="search-bar">
    </div>
  <div class="bookings-requests-cards-container">
    <h2> Bookings you placed </h2>
    <% @bookings_requests.each do |booking| %>
      <div class="booking-card">
        <div class="booking-card-image">
        <div class="booking-card-info">
          <div id="map"
            style="width: 100%; height: 200px;"
            data-markers="<%= {
              lat: booking.latitude,
              lng: booking.longitude
            }.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
          <h4><%= booking.offer.title %></h4>
          <p><i class="fas fa-hashtag"></i> <%= booking.offer.category %></p>
          <p><i class="fas fa-euro-sign"> <%= booking.offer.price %></i></p>
          <p><i class="far fa-calendar-alt"></i> <%= booking.day %></i></p>
          <p><i class="fas fa-map-marker-alt"></i> <%= booking.patron_address %></i></p>
          <% if booking.status == "pending" %>
            <i class="fas fa-calendar-minus", style="color: orange"> <%= booking.status %></i>
          <% elsif booking.status == "approved" %>
           <i class="fas fa-calendar-check" , style="color: green"> <%= booking.status %></i>
          <% else %>
            <i class="fas fa-calendar-times" , style="color: red"> <%= booking.status %></i>
          <% end %>
        </div>
      </div>
      </div>
    <% end %>
  </div>
  <br>
</div>



  <div class="bookings-requests-cards-container">
           <h2>  Bookings requested by patrons </h2>
    <% @bookings_as_artist.each do |booking| %>
      <div class="booking-card">
        <div class="booking-card-image">
        <div class="booking-card-info">
             <h4><%= booking.offer.title %></h4>
          <p><i class="fas fa-hashtag"></i> <%= booking.offer.category %></p>
          <p><i class="fas fa-euro-sign"> <%= booking.offer.price %></i></p>
          <p><i class="fas fa-map-marker"> <%= booking.day %></i></p>
          <p><i class="fas fa-map-marker"> <%= booking.status %></i></p>
 <%= link_to "Decline booking", booking_path(booking), method: :delete, data: { confirm: "Do you want to decline this booking?" }, class: 'btn btn-danger ml-8' %>


        </div>
      </div>
      </div>
    <% end %>
  </div>



