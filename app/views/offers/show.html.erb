<section id=offer-pic>
  <%= image_tag "art_3.jpg"%>
</secttion>

<section id=info-booking>
<div class="container">
  <%= link_to root_path, class: "back" do %>
    <i class="fa fa-arrow-left"></i> Back
  <% end %> <br>

  <h1 id=offer-title><%= @offer.title %></h1>
  <h2><%="#{@offer.user.first_name} #{@offer.user.last_name}"%></h2>

  <p><%= @offer.description %></p>

  <h6 id=edit>
    <%= link_to "Edit details", edit_offer_path %> or <%= link_to "Delete offer", offer_path(@offer), method: :delete, data: { confirm: "Are you sure you want to delete?" }%>
  </h6>

  <div class="artist-card">
  <!-- image place holder -->
  <!-- <button> <%#= button_to "Book", { action: "booking confirmation path placeholder", class: "btn btn-primary"}, :method => :get %> </button> -->
  </div>
<div class=booking>
  <% if policy(Booking).create? %>
      <h1 id= booking-request>Make a booking request</h1>
      <%= simple_form_for([@offer, @booking]) do |f| %>
      <%= f.input :day, :label => "Event date"  %>
      <%= f.input :comment, :label => "Is there anything else the artist should know?" %>
      <%= f.submit "SUBMIT", class: "button-submit" %>
    <% end %>
  <% end %>
  <br>
  <p><%= link_to "Back to offers", offers_path %></p>
  </div>
</div>

</section>

