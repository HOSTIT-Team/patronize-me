<div class="container">
  <h4>NAVBAR</h4>
  <br>
  <div class="search-bar">
    <h4>Search more artists</h4>
    <%= simple_form_for @offer do |f| %>
    <%= f.input :category, :label => "Artform", collection: Offer::CATEGORY %>
    <%= f.input :city, :label => "Location", collection: Offer::CITY %>
    <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
  <br>
  <hr>
  <br>
   <div class="offer-cards-container">
    <% @offers.each do |offer| %>
      <div class="offer-card">
      <% if offer.banner.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path offer.photo.key, height: 300, width: 400, crop: :fill %>')">
          <p><%= link_to "#{offer.title}", offer_path(offer.id) %></p>
        </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1583376097610-516c37bb66ba?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80)">
            <p><%= link_to "#{offer.title}", offer_path(offer.id) %></p>
        </div>
      <% end %>
        <div class="offer-card-info">
          <h4><%= offer.title %></h4>
          <p><i class="fas fa-hashtag"></i> <%= offer.category %></p>
          <p><i class="fas fa-euro-sign"> <%= offer.price %></i></p>
          <p><i class="fas fa-map-marker"> <%= offer.city %></i></p>
        </div>
        <%= link_to "BOOK ME", new_offer_path, class: "offer-card-button" %>
      </div>
    <% end %>
  </div>
  <br>
  <hr>
  <br>
  <p><%= link_to "HOME", root_path %></p>
  <h4>FOOTER</h4>
</div>

