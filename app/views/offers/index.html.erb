 <div class="container">
  <div class="search-bar">
    <h4>Search more artists</h4>
    <%= form_tag offers_path, method: :get do %>
    <%= text_field_tag :category,
    params[:category],
    class: "form-control",
    placeholder: "Search by category"
  %>
<%= text_field_tag :location,
    params[:location],
    class: "form-control",
    placeholder: "Search by location"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
  </div>

  <div class="offer-cards-container">
  <% @offers.each do |offer| %>
    <div class="offer-card">
      <% if offer.banner.attached? %>
        <div class="offer-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path offer.banner.key, height: 300, width: 400, crop: :fill %>')">
      <% else %>
        <div class="offer-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1583376097610-516c37bb66ba?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80)">
       <% end %>
        <div class="offer-card-info">
          <p><%= offer.title %></p>
          <ul>
            <li><i class="fas fa-hashtag"></i> <%= offer.category %></li>
            <li><i class="fas fa-euro-sign"> <%= offer.price %></i></li>
            <li><i class="fas fa-map-marker"> <%= offer.city %></i></li>
          </ul>
          <%= link_to "BOOK ME", offer_path(offer), class: "btn offer-card-button"%>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>

