<div class="offer-cards-container">
    <% @offers.each do |offer| %>
      <div class="offer-card">
      <% if offer.banner.attached? %>
        <div class="offer-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path offer.banner.key, height: 300, width: 400, crop: :fill %>')">
          <div class="offer-card-info">
            <p><strong><%= offer.title.upcase %></strong></p>
            <ul>
              <p><li><i class="fas fa-hashtag"></i> <%= offer.category %></li></p>
              <p><li><i class="fas fa-map-marker"></i> <%= offer.city %></li></p>
              <p><li><i class="fas fa-euro-sign"></i> <%= offer.price %></li></p>
            </ul>
            <div class="offer-card-button"> <%= link_to "BOOK ME", offer_path(offer)%>
          </div>
          </div>
        </div>
      <% else %>
        <div class="offer-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1583376097610-516c37bb66ba?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80)">
          <div class="offer-card-info">
            <p><strong><%= offer.title.upcase %></strong></p>
            <ul>
              <p><li><i class="fas fa-hashtag"></i> <%= offer.category %></li></p>
              <p><li><i class="fas fa-map-marker"></i> <%= offer.city %></li></p>
              <p><li><i class="fas fa-euro-sign"></i> <%= offer.price %></li></p>
            </ul>
            <div class="offer-card-button"> <strong><%= link_to "BOOK ME", offer_path(offer)%></strong></div>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
